{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    
    /* FIX FOR TS1295: We set this to false so TS can help manage 
       the difference between ESM and CommonJS for you. */
    "verbatimModuleSyntax": false, 
    
    "isolatedModules": true,
    "moduleDetection": "force",
    "lib": ["ESNext"],
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}